#include<iostream>
#include<vector>
using namespace std;

vector<int> parisum(vector<int> nums, int target){
    vector<int> ans;
    int n=nums.size();
    int i=0;
    int j=n-1;
    while (i<j)
    {
        int parsum=nums[i]+nums[j];
        if (parsum>target)
        {
            j--;
        }
        else if (parsum<target)
        {
            i++;
        }
        else{
            ans.push_back(i);
            ans.push_back(j);
            return ans;
        }
        
        
    }
    return ans;
    
}

int main() {
    vector<int> nums = {2, 7, 11, 15};
    int target = 9;
    vector<int> ans = parisum(nums, target);

    if (!ans.empty()) {
        cout << "Indices: ";
        for (int i : ans) {
            cout << i << " ";
        }
        cout << endl;
    } else {
        cout << "No valid pair found." << endl;
    }

    return 0;
}

